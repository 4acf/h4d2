    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="SFML.Net" Version="2.6.1" />
      <PackageReference Include="SkiaSharp" Version="3.119.1" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="res\" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="res\common.png" />
      <EmbeddedResource Include="res\common.png" />
      <None Remove="res\special.png" />
      <EmbeddedResource Include="res\special.png" />
      <None Remove="res\survivor.png" />
      <EmbeddedResource Include="res\survivor.png" />
      <None Remove="res\uncommon.png" />
      <EmbeddedResource Include="res\uncommon.png" />
      <None Remove="res\survivors.png" />
    </ItemGroup>

</Project>
